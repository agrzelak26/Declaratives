--konstrukcja if else
solve :: Float -> Float -> Float -> (Float, Float)
solve a b c =
  if delta >= 0
      then ((-b + sqrt delta) / (2 * a),(-b - sqrt delta) / (2 * a))
  else error "Brak rozwiazan rzeczywistych"
  where
      delta = b^2 - 4 * a * c
      
main :: IO()
main = do
  print(solve 3 10 7)

  
